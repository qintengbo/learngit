<div class="panel panel-default">
    <div class="panel-heading">
       编辑版本

    </div>
    <div class="panel-body detail-padding-15">
        <form class="form-horizontal" name="luckdraw">
            <div class="form-group">
                <label class="col-md-2 control-label">平台类型</label>
                <div class="col-md-3">
                    <select name="" id="" class="form-control" ng-model="vm.params.summary">
                        <option value="ios" ng-selected="vm.params.summary=='ios'">ios</option>
                        <option value="android" ng-selected="vm.params.summary=='android'">android</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">版本名称</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" ng-model="vm.params.title">
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">版本号</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" ng-model="vm.params.version">

                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">URL地址</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" ng-model="vm.params.url">

                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">版本信息</label>
                <div class="col-md-10">
                    <script id="myEditor" type="text/plain"
                            style="width:100%;height:200px;margin-right:0;"></script>
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label">强制更新</label>
                <div class="col-md-2" style="padding-top:6px">
                    <label for="update-yes">是</label>
                    <input id="update-yes" ng-model="vm.params.status" value="2" type="radio" name="update">

                </div>
                <div class="col-md-2" style="padding-top:6px">
                    <label for="update-no">否</label>
                    <input id="update-no" value="1" ng-model="vm.params.status"  type="radio" name="update">

                </div>
            </div>



            <div class="form-group">
                <label class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <div class="col-md-4">
                        <button class="btn btn-sm btn-success" ng-click="submit()">确定</button>
                        <button class="btn btn-sm btn-danger" ui-sref="field.versionController">取消</button>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label text-red" ng-if="vm.error">请补全信息</label>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>