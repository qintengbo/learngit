@charset "UTF-8";
@co1: #fc2b47;
@co2: #2d3e50;
@co3: #22415d;
@co4: #f6f7f8;
.pos(@pos: relative) {
  position: @pos;
}
.top(@top) {
  top: @top;
}
.rig(@rig) {
  right: @rig;
}
.lef(@lef) {
  left: @lef;
}
.bot(@bot) {
  bottom: @bot;
}
.disp(@disp: inline-block) {
  display: @disp;
}
.mar(@mar) {
  margin: @mar;
}
.pad(@pad) {
  padding: @pad;
}
.mar-top(@mar-top) {
  margin-top: @mar-top;
}
.mar-bot(@mar-bot) {
  margin-bottom: @mar-bot;
}
.mar-lef(@mar-lef) {
  margin-left: @mar-lef;
}
.mar-rig(@mar-rig) {
  margin-right: @mar-rig;
}
.pad-top(@pad-top) {
  padding-top: @pad-top;
}
.pad-bot(@pad-bot) {
  padding-bottom: @pad-bot;
}
.pad-lef(@pad-lef) {
  padding-left: @pad-lef;
}
.pad-rig(@pad-rig) {
  padding-right: @pad-rig;
}
.flo(@flo: left) {
  float: @flo;
}
.bor(@bor: solid 1px @co4) {
  border: @bor;
}
.bor-top(@bo-top) {
  border-top: @bo-top;
}
.bor-lef(@bo-lef) {
  border-left: @bo-lef;
}
.bor-rig(@bo-rig) {
  border-right: @bo-rig;
}
.bor-bot(@bo-bot) {
  border-bottom: @bo-bot;
}
.bor-rad(@bor-rad) {
  border-radius: @bor-rad;
}
.max-wid(@max-wid: 768px) {
  max-width: @max-wid;
}
.min-wid(@min-wid: 320px) {
  min-width: @min-wid;
}
.wid(@wid) {
  width: @wid;
}
.hei(@hei) {
  height: @hei;
}
.font(@font) {
  font-size: @font;
}
.font-wei(@font-wei) {
  font-weight: @font-wei;
}
.text-a(@text-a: center) {
  text-align: @text-a;
}
.ver-a(@ver-a: middle) {
  vertical-align: @ver-a;
}
.col(@col) {
  color: @col;
}
.bagr(@bagr) {
  background: @bagr;
}
.tran(@tran: translateY(-50%)) {
  transform: @tran;
}
.z-in(@z-in: 10) {
  z-index: @z-in;
}
.comdeta_bid {
  .pad-top(20px);
  .mar-lef(-15px);
  .bor-top(1px solid #e8e8e8);
}
.comdeta_bid_title {
  .pad-lef(6px);
  .bor-lef(4px solid @co1);
  .font(1.6rem);
  .font-wei(700);
}
.comdeta_bid_bor {
  .bor-rig(2px solid #e8e8e8);
  .hei(auto);
  min-height: 500px;
  @media screen and (max-width: 991px) {
    .bor-rig(0);
  }
}
.comdeta_bid_panel {
  .mar-top(20px);
  .pad(10px);
  .bor(1px solid #e8e8e8);
}
.comdeta_bid_content {
  .mar-top(15px);
  .pad(25px 30px);
  .bor(1px solid #e8e8e8);
  .bor-rad(8px);
  cursor: pointer;
  &:hover {
    .bagr(@co4);
  }
}
.comdeta_bid_name {
  .disp;
  .ver-a;
  .wid(25%);
  .font(1.6rem);
  .font-wei(700);
  @media screen and (max-width: 480px) {
    .wid(70%);
  }
}
.comdeta_bid_compen {
  .mar-lef(5%);
  .font(1.4rem);
  .font-wei(700);
  color: @co1;
}
.comdeta_bid_exper {
  .mar-lef(5%);
  .font(1.4rem);
  @media screen and (max-width: 767px) {
    .disp(block);
    .mar(5px 0);
  }
}
.comdeta_bid_time {
  .flo(right);
  .font(1.4rem);
  color: #999;
}
.comdeta_error {
  .pad-top(100px);
  .text-a;
}