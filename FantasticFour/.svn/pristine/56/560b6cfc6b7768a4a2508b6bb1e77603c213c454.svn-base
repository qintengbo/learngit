@charset "UTF-8";
@charset "UTF-8";
@co1: #fc2b47;
@co2: #2d3e50;
@co3: #22415d;
@co4: #f6f7f8;
.pos(@pos: relative) {
  position: @pos;
}
.top(@top) {
  top: @top;
}
.rig(@rig) {
  right: @rig;
}
.lef(@lef) {
  left: @lef;
}
.bot(@bot) {
  bottom: @bot;
}
.disp(@disp: inline-block) {
  display: @disp;
}
.mar(@mar) {
  margin: @mar;
}
.pad(@pad) {
  padding: @pad;
}
.mar-top(@mar-top) {
  margin-top: @mar-top;
}
.mar-bot(@mar-bot) {
  margin-bottom: @mar-bot;
}
.mar-lef(@mar-lef) {
  margin-left: @mar-lef;
}
.mar-rig(@mar-rig) {
  margin-right: @mar-rig;
}
.pad-top(@pad-top) {
  padding-top: @pad-top;
}
.pad-bot(@pad-bot) {
  padding-bottom: @pad-bot;
}
.pad-lef(@pad-lef) {
  padding-left: @pad-lef;
}
.pad-rig(@pad-rig) {
  padding-right: @pad-rig;
}
.flo(@flo: left) {
  float: @flo;
}
.bor(@bor: solid 1px @co4) {
  border: @bor;
}
.bor-top(@bo-top) {
  border-top: @bo-top;
}
.bor-lef(@bo-lef) {
  border-left: @bo-lef;
}
.bor-rig(@bo-rig) {
  border-right: @bo-rig;
}
.bor-bot(@bo-bot) {
  border-bottom: @bo-bot;
}
.bor-rad(@bor-rad) {
  border-radius: @bor-rad;
}
.max-wid(@max-wid: 768px) {
  max-width: @max-wid;
}
.min-wid(@min-wid: 320px) {
  min-width: @min-wid;
}
.wid(@wid) {
  width: @wid;
}
.hei(@hei) {
  height: @hei;
}
.font(@font) {
  font-size: @font;
}
.font-wei(@font-wei) {
  font-weight: @font-wei;
}
.text-a(@text-a: center) {
  text-align: @text-a;
}
.ver-a(@ver-a: middle) {
  vertical-align: @ver-a;
}
.col(@col) {
  color: @col;
}
.bagr(@bagr) {
  background: @bagr;
}
.tran(@tran: translateY(-50%)) {
  transform: @tran;
}
.z-in(@z-in: 10) {
  z-index: @z-in;
}
.about_content {
  .pad(20px 0);
  color: @co3;
  .bagr(@co4);
}
.about_nav {
  .wid(220px);
  .mar-rig(50px);
  .pad(75px 0);
  .bagr(#fff);
  @media screen and (max-width: 991px) {
    .wid(100%);
    .mar-rig(0);
  }
}
.about_main {
  float: none;
  .wid(auto);
  .pad(80px 60px);
  overflow: auto;
  .bagr(#fff);
  @media screen and (max-width: 991px) {
    .flo(left);
    .wid(100%);
  }
  @media screen and (max-width: 767px) {
    .pad(80px 5%);
  }
}
.about_subnav {
  .wid(100%);
  .pad(6px 0);
  .text-a;
  box-sizing: border-box;
  &:hover .about-wei{
    background-position: -4px -5px;
  }
  &:hover .contact-wei {
    background-position: -52px -5px;
  }
  &:hover .about_mar-lef10 {
    color: @co1;
  }
}
.about_icon {
  .disp;
  .wid(18px);
  .hei(19px);
  .ver-a;
  background: url(../../images/IconCollection.png) no-repeat;
}
.about-wei {
  background-position: -28px -5px;
}
.about-wei-active {
  background-position: -4px -5px;
}
.contact-wei {
  background-position: -77px -5px;
}
.contact-wei-active {
  background-position: -52px -5px;
}
.about_mar-lef10 {
  .disp;
  .ver-a(sub);
  .text-a;
  .mar-lef(10px);
  .font(1.6rem);
}
.about_hover {
  color: @co1!important;
  text-decoration: none!important;
}
.about_borlef {
  .bor-lef(4px solid @co1);
  .bagr(@co4);
}
.about_marlef4 {
  .mar-lef(-4px);
}
.about_main_title {
  .pad-lef(10px);
  .bor-lef(4px solid @co1);
  .font(1.6rem);
  .font-wei(700);
}
.about_main_content {
  .mar(40px 0);
  .pad-lef(14px);
  .font(1.4rem);
}
.about_mar-top20 {
  .mar-top(20px);
}
.about_companyname {
  .font(1.6rem);
  .font-wei(700);
}
.about_datail {
  .mar(20px 0 30px);
  .font(1.4rem);
}
.about_colu {
  .mar-top(20px);
  .disp;
  span {
    .disp;
    .ver-a;
    .mar-lef(15px);
  }
}
.about_wid {
  .wid(47%);
  @media screen and (max-width: 767px) {
    .wid(300px);
  }
}
.about_wid2 {
  .wid(52%);
  @media screen and (max-width: 767px) {
    .wid(300px);
  }
}
.about-img {
  .mar-top(30px);
  .bor(1px solid #e8e8e8);
}
